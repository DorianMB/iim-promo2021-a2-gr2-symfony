{% extends 'base.html.twig' %}

{% block main %}
    <h1 class="text-center text-info" style="margin: 40px 0;">Products</h1>
    <div class="container">
        {% for rep in repo %}
            <a style="text-decoration: none" class="text-dark" href="{{ path('product',{'id':rep.id}) }}">
                <div class="bg-light">
                    <h4 class="text-center">{{ rep.name }}</h4>
                    <p class="text-center">{{ rep.description }}</p>
                    <p class="text-center">{{ rep.createdAt }}</p>
                </div>
            </a>
        {% endfor %}
        <div class="container">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item {% if id==1 %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('homepage',{'id':id-1}) }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    {% if id == 1 %}
                    <li class="page-item active"><a class="page-link" href="{{ path('homepage',{'id':id}) }}">{{ id }}</a></li>
                    <li class="page-item"><a class="page-link" href="{{ path('homepage',{'id':id+1}) }}">{{ id+1 }}</a></li>
                    <li class="page-item"><a class="page-link" href="{{ path('homepage',{'id':id+2}) }}">{{ id+2 }}</a></li>
                    {% elseif id== count+1 %}
                    <li class="page-item"><a class="page-link" href="{{ path('homepage',{'id':id-2}) }}">{{ id-2 }}</a></li>
                    <li class="page-item"><a class="page-link" href="{{ path('homepage',{'id':id-1}) }}">{{ id-1 }}</a></li>
                    <li class="page-item active"><a class="page-link" href="{{ path('homepage',{'id':id}) }}">{{ id }}</a></li>
                    {% else %}
                    <li class="page-item"><a class="page-link" href="{{ path('homepage',{'id':id-1}) }}">{{ id-1 }}</a></li>
                    <li class="page-item active"><a class="page-link" href="{{ path('homepage',{'id':id}) }}">{{ id }}</a></li>
                    <li class="page-item"><a class="page-link" href="{{ path('homepage',{'id':id+1}) }}">{{ id+1 }}</a></li>
                    {% endif %}
                    <li class="page-item {% if id==count+1 %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('homepage',{'id':id+1}) }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}
